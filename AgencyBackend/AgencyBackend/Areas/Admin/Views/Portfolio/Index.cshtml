@model HomeViewModel
@{ 
    int count = 1;
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Create Portfolio</a>
</div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Portfolio Table</h4>
                
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Images</th>
                                <th>Title</th>
                                <th>Info</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var portfolio in Model.Portfolios)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>
                                        <img src="~/assets/image/@portfolio.Image" style="width:100px ; height:100px; object-fit:cover" />
                                    </td>
                                    <td>@portfolio.Title</td>
                                    <td>@portfolio.Info</td>
                                    <td class="text-center">
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@portfolio.Id">
                                            <i class="fas fa-edit"></i>  Edit
                                        </a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@portfolio.Id">
                                            <i class="fas fa-trash"></i>  Delete
                                        </a>
                                    </td>
                                </tr>

                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>